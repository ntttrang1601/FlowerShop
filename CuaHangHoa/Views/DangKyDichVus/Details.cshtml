@model CuaHangHoa.Models.DangKyDichVu

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="myaccount-content">
    <h3>Chi tiết đơn hàng dịch vụ</h3>
    <div class="account-details-form">
        <div>            
            <dl class="row">
                <dt class="col-sm-2">
                    Dịch vụ
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DichVu.TenDV)
                </dd>
                <dt class="col-sm-2">
                    Người đặt
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.User.LastName)
                    @Html.DisplayFor(model => model.User.FirstName)                    
                </dd>
                <dt class="col-sm-2">
                    Ngày đặt
                </dt>
                <dd class="col-sm-10">
                   @*  @Html.DisplayFor(model => model.NgayDangKy) *@
                    @Model.NgayDangKy.ToShortDateString()
                    
                </dd>
                <dt class="col-sm-2">
                    Ngày tổ chức
                </dt>
                <dd class="col-sm-10">
                   @*  @Html.DisplayFor(model => model.NgayToChuc) *@
                    @Model.NgayToChuc.ToShortDateString()
                </dd>
                <dt class="col-sm-2">
                    Trạng thái đơn đặt
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.TrangThaiDangKy)
                </dd>
                <dt class="col-sm-2">
                    Địa chỉ tổ chức
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DchiToChuc)
                </dd>
                <dt class="col-sm-2">
                    Ghi chú
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.GhiChu)
                </dd>
                <dt class="col-sm-2">
                    Giá
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DichVu.Gia)
                </dd>
            </dl>
        </div>
        <div>
            <a class="btn flosun-button secondary-btn theme-color rounded-0" asp-action="Edit" asp-route-id="@Model?.Id">Chỉnh sửa</a> |
            <a class="btn flosun-button secondary-btn theme-color rounded-0" asp-action="Index">Quay lại</a>
        </div>
    </div>
</div>


