@model CuaHangHoa.Models.DichVu

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="myaccount-content">
    <div class="account-details-form">
        <h3>Bạn có chắc muốn xóa dịch vụ này không?</h3>
        <div>
            <h4>Dịch vụ </h4>
            <dl class="row">
                <dt class="col-sm-2">
                    Tên dịch vụ
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.TenDV)
                </dd>
                <dt class="col-sm-2">
                    Mô tả
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Mota)
                </dd>
                <dt class="col-sm-2">
                    Giá
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Gia)
                </dd>
                <dt class="col-sm-2">
                    Ngừng dịch vụ
                </dt>
                <dd class="col-sm-10">
                    @* @Html.DisplayFor(model => model.Ngungban) *@
                    <input type="checkbox" style="display: inline-block;" disabled="disabled" @(Model.Ngungban ? "checked" : "") />
                </dd>                
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input class="btn flosun-button secondary-btn theme-color rounded-0" type="submit" value="Xóa ngay"/> |
                <a class="btn flosun-button secondary-btn theme-color rounded-0" asp-action="Index">Quay lại</a>
            </form>
        </div>

    </div>
</div>
