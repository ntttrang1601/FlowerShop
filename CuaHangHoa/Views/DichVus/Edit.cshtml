@model CuaHangHoa.Models.DichVu

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="myaccount-content">
    <h3>Chỉnh sửa</h3>
    <div class="account-details-form">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="TenDV" class="control-label">Tên</label>
                        <input asp-for="TenDV" class="form-control" />
                        <span asp-validation-for="TenDV" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Mota" class="control-label">Mô tả</label>
                        <input asp-for="Mota" class="form-control" />
                        <span asp-validation-for="Mota" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Gia" class="control-label">Giá</label>
                        <input asp-for="Gia" class="form-control" />
                        <span asp-validation-for="Gia" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        @* <label class="form-check-label">
                        <input class="form-check-input" asp-for="Ngungban" /> @Html.DisplayNameFor(model => model.Ngungban)
                        </label> *@
                        <label class="form-check-label">
                            <input class="form-check-input custom-checkbox" asp-for="Ngungban" style="display: inline-block; width: 16px; height: 16px; margin-right: 5px;" /> Ngừng dịch vụ
                        </label>
                    </div>                    
                    <div class="form-group">
                        <label asp-for="HinhDVs" class="control-label">Hình ảnh</label>
                        <div class="d-flex list-Pic overflow-auto">
                            @{
                                foreach (var image in Model.HinhDVs)
                                {
                                    <img width="150" height="150" src="~/images/DichVu/@image.Url" alt="IMG">
                                }
                            }
                        </div>
                        <input type="file" name="files" id="fileInput" multiple class="mt-3">
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Lưu" class="btn flosun-button secondary-btn theme-color rounded-0" />
                        <a class="btn flosun-button secondary-btn theme-color rounded-0" asp-action="Index">Quay lại</a>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>
