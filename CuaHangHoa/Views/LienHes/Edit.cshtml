@model CuaHangHoa.Models.LienHe

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="myaccount-content">
    <h3>Chỉnh sửa thông tin liên hệ</h3>
    <div class="account-details-form">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="HoTen" class="control-label">Họ Tên</label>
                        <input asp-for="HoTen" class="form-control" readonly/>
                        <span asp-validation-for="HoTen" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SDT" class="control-label">Số điện thoại</label>
                        <input asp-for="SDT" class="form-control" readonly/>
                        <span asp-validation-for="SDT" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MatHang" class="control-label">Mặt hang quan tâm</label>
                        <input asp-for="MatHang" class="form-control" readonly/>
                        <span asp-validation-for="MatHang" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ThongDiep" class="control-label">Thông điệp</label>
                        <input asp-for="ThongDiep" class="form-control" readonly/>
                        <span asp-validation-for="ThongDiep" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NgayGui" class="control-label">Ngày gửi</label>
                        <input asp-for="NgayGui" type="date" class="form-control" readonly/>
                        <span asp-validation-for="NgayGui" class="text-danger"></span>
                    </div>
                    @* <div class="form-group">
                        <label asp-for="TTLienHe" class="control-label"></label>
                        <select asp-for="TTLienHe" class="form-control"></select>
                        <span asp-validation-for="TTLienHe" class="text-danger"></span>
                    </div> *@
                    <div class="form-group">
                        <label for="TTLienHe">Trạng Thái</label>
                        @Html.DropDownListFor(model => model.TTLienHe,
                                 new SelectList(ViewBag.TTLienHeList, "Value", "Text"),
                                 "Chọn trạng thái",
                                 new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label asp-for="GhiChu" class="control-label">Ghi chú</label>
                        <input asp-for="GhiChu" class="form-control" />
                        <span asp-validation-for="GhiChu" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group">
                        <input class="btn flosun-button secondary-btn theme-color rounded-0" type="submit" value="Lưu" />
                        <a class="btn flosun-button secondary-btn theme-color rounded-0" asp-action="Index">Quay lại</a>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>

