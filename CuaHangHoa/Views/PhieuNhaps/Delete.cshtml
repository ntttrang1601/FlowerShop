@model CuaHangHoa.Models.PhieuNhap

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="myaccount-content">
    <div class="account-details-form">
        <h3>Bạn có chắc muốn xóa phiếu nhập này không?</h3>
        <div>
            <h4>Thông tin phiếu nhập</h4>          
            <dl class="row">
                <dt class="col-sm-2">
                    Nhà cung cấp
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.NhaCungCap.Ten)
                </dd>
                <dt class="col-sm-2">
                    Ngày nhập
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.NgayNhap)
                </dd>
                <dt class="col-sm-2">
                    Số lượng
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.SoLuongMatHang)
                </dd>
                <dt class="col-sm-2">
                    Tổng tiền
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.TongTien)
                </dd>
                <dt class="col-sm-2">
                    Ghi chú
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.GhiChu)
                </dd>
                <dt class="col-sm-2">
                    Người nhập
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.User.LastName)
                    @Html.DisplayFor(model => model.User.FirstName)
                </dd>
            </dl>

            <h4>Danh sách sản phẩm đã nhập</h4>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>@Html.DisplayName("Tên sản phẩm")</th>
                        <th>@Html.DisplayName("Số lượng")</th>
                        <th>@Html.DisplayName("Đơn giá")</th>
                        <th>@Html.DisplayName("Thành tiền")</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.CTPhieuNhaps)
                    {
                        <tr>
                            <td>@item.SanPham.Ten</td>
                            <td>@item.SoLuong</td>
                            <td>@String.Format("{0:#,0} VND", item.GiaNhap)</td>
                            <td>@String.Format("{0:#,0} VND", item.SoLuong * item.GiaNhap)</td>
                        </tr>
                    }
                </tbody>
            </table>
            <hr />
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input class="btn flosun-button secondary-btn theme-color rounded-0" type="submit" value="Xóa ngay" /> |
                <a class="btn flosun-button secondary-btn theme-color rounded-0" asp-action="Index">Quay lại</a>
            </form>
        </div>
    </div>
</div>
