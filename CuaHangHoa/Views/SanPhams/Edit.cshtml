@model CuaHangHoa.Models.SanPham

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="myaccount-content">
    <h3>Chỉnh sửa</h3>
    <div class="account-details-form">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="Ten" class="control-label">Tên</label>
                        <input asp-for="Ten" class="form-control" />
                        <span asp-validation-for="Ten" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Mota" class="control-label">Mô tả</label>
                        @* <input asp-for="Mota" class="form-control" /> *@
                        <textarea asp-for="Mota" style="height: 150px;" class="form-control"></textarea>
                        <span asp-validation-for="Mota" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Donvitinh" class="control-label">Đơn vị tính</label>
                        <input asp-for="Donvitinh" class="form-control" />
                        <span asp-validation-for="Donvitinh" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Dongia" class="control-label">Đơn giá</label>
                        <input asp-for="Dongia" class="form-control" />
                        <span asp-validation-for="Dongia" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PhanTramGiamGia" class="control-label">Phần trăm giảm giá</label>
                        <input asp-for="PhanTramGiamGia" class="form-control" />
                        <span asp-validation-for="PhanTramGiamGia" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="GiaSauGiamGia" class="control-label">Giá giảm</label>
                        <input asp-for="GiaSauGiamGia" class="form-control" />
                        <span asp-validation-for="GiaSauGiamGia" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Soluongkho" class="control-label">Số lượng kho</label>
                        <input asp-for="Soluongkho" class="form-control" />
                        <span asp-validation-for="Soluongkho" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        @* <label class="form-check-label">
                        <input class="form-check-input" asp-for="Ngungban" /> @Html.DisplayNameFor(model => model.Ngungban)
                        </label> *@
                        <label class="form-check-label">
                            <input class="form-check-input custom-checkbox" asp-for="Ngungban" style="display: inline-block; width: 16px; height: 16px; margin-right: 5px;" /> Ngừng bán
                        </label>
                    </div>
                    <div class="form-group">
                        <label asp-for="LoaiSPId" class="control-label">Loại sản phẩm</label>
                        <select asp-for="LoaiSPId" class="form-control" asp-items="ViewBag.LoaiSPId"></select>
                        <span asp-validation-for="LoaiSPId" class="text-danger"></span>
                    </div>
                    @* <div class="form-group">
                    <label asp-for="NhaCungCapId" class="control-label">Nhà cung cấp</label>
                    <select asp-for="NhaCungCapId" class="form-control" asp-items="ViewBag.NhaCungCapId"></select>
                    <span asp-validation-for="NhaCungCapId" class="text-danger"></span>
                    </div> *@
                    <div class="form-group">
                        <label asp-for="Hinhs" class="control-label">Hình ảnh</label>
                        <div class="d-flex list-Pic overflow-auto">
                            @{
                                foreach (var image in Model.Hinhs)
                                {
                                    <img width="150" height="150" src="~/images/SanPham/@image.Url" alt="IMG">
                                }
                            }
                        </div>
                        <input type="file" name="files" id="fileInput" multiple class="mt-3">
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Lưu" class="btn flosun-button secondary-btn theme-color rounded-0" />
                        <a class="btn flosun-button secondary-btn theme-color rounded-0" asp-action="Index">Quay lại</a>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>




