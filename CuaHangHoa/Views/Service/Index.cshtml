@model CuaHangHoa.ViewModels.DVuViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!doctype html>
<html class="no-js" lang="zxx">
<body>
