
@{
    ViewData["Title"] = "Account";
    Layout = "~/Views/Shared/_Profile.cshtml";
}

<div class="myaccount-content">
    <h3>Thông tin tài khoản</h3>
    <div class="account-details-form">
        <form action="#">
            <div class="row">
                <div class="col-lg-6 col-custom">
                    <div class="single-input-item mb-3">
                        <label for="first-name" class="required mb-1">Họ</label>
                        <input type="text" value="@Model.FirstName" disabled />
                    </div>
                </div>
                <div class="col-lg-6 col-custom">
                    <div class="single-input-item mb-3">
                        <label for="last-name" class="required mb-1">Tên</label>
                        <input type="text" id="last-name" value="@Model.LastName" disabled />
                    </div>
                </div>
            </div>
            <div class="single-input-item mb-3">
                <label for="full-name" class="required mb-1">Tên đầy đủ</label>
                <input type="text" id="full-name" placeholder="@Model.FullName" disabled />
            </div>
            <div class="single-input-item mb-3">
                <label for="city" class="required mb-1">Tỉnh/Thành phố</label>
                <input type="city" id="city" placeholder="@Model.City" disabled />
            </div>
            <div class="single-input-item mb-3">
                <label for="create-time" class="required mb-1">Ngày tạo</label>
                <input type="create-time" id="create-time" placeholder="@Model.CreateTime" disabled />
            </div>
            <div class="single-input-item mb-3">
                <label for="email" class="required mb-1">Email</label>
                <input type="email" id="email" placeholder="@Model.Email" disabled />
            </div>
            <div class="single-input-item mb-3">
                <label for="phone-number" class="required mb-1">Số điện thoại</label>
                <input type="phone-number" id="phone-number" placeholder="@Model.PhoneNumber" disabled />
            </div>
        </form>
        <div>
@*             <a class="btn flosun-button secondary-btn theme-color rounded-0" asp-action="Edit" asp-route-id="@Model?.Id">Chỉnh sửa</a>
            *@            <a href="@Url.Action("Edit","User")" class="btn flosun-button secondary-btn theme-color rounded-0"></>Cập nhật thông tin</a>
        </div>
    </div>
</div>
@if (TempData["SuccessMessage"] != null)
{
    <script>
        window.onload = function () {
            alert(@Html.Raw(Json.Serialize(TempData["SuccessMessage"])));
        };
    </script>
}


