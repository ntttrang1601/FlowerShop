@model IEnumerable<CuaHangHoa.ViewModels.OrderViewModel>
@{
    ViewData["Title"] = "OrderList";
    Layout = "~/Views/Shared/_Profile.cshtml";
}

<div class="myaccount-content">
    <h3>Danh sách đơn hàng</h3>
    <div class="myaccount-table table-responsive text-center">
        <table class="table table-bordered">
            <thead class="thead-light">
                <tr>
                    <th>Đơn hàng</th>
                    <th></th>
                    <th>Thông tin</th>
                    <th>Xử lý</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">
                            @item.Id
                        </td>
                        <td class="product-thumb">
                            <img width="100px" height="auto" src="~/images/SanPham/@item.Images" alt="Hình ảnh minh họa">
                        </td>
                        <td class="product-details">
                            <span style="display:block;"><strong style="width:40%">Ngày đặt: </strong><time>@item.Date.ToShortDateString()</time> </span>
                            <span style="display:block;"><strong style="width:40%">Phương thức: </strong>@item.PayMethod </span>
                            <span style="display:block;" class="status active"><strong style="width:40%">Trạng thái</strong>@item.Status</span>
                            <span style="display:block;"><strong style="width:40%">Tổng tiền: </strong>@item.Total.ToString("#,##") &#x0111</span>
                        </td>
                        <td class="action" data-title="Xử lý">
                            <div class="">
                                <ul class="list-inline justify-content-center">
                                    <li class="list-inline-item">
                                        <a data-toggle="tooltip" data-placement="top" title="Xem" class="view" asp-action="OrderDetails" asp-route-id="@item.Id">
                                            <i class="fa fa-eye"></i>
                                        </a>
                                    </li>

                                </ul>
                            </div>
                        </td>
                    </tr>

                }
                
            </tbody>
        </table>
    </div>
</div>
